<%= form_for @zadatak, :html => {multipart: true } do |f| %>
  <%= f.label :problem %>
  <%= f.text_field :problem, class: 'form-control' %>

  <%= f.label :solution %>
  <%= f.text_field :solution, class: 'form-control' %>

  <%= f.label :all_tags %>
  <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
  
  <%= f.label :pictures %>
  <%= file_field_tag "images[]", type: :file, multiple: true %>

  <%= f.submit 'New zadatak', class: "btn btn-primary" %>
<% end %>
