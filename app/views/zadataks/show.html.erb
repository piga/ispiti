<% provide(:title, 'Zadatak') %>

<p id="notice"><%= notice %></p>

<p>
  <%= raw @zadatak.problem %>
</p>

<p>  <strong>Rjesenje:</strong>    </p>
  
<%= raw @zadatak.solution %>


<% if current_user && current_user.admin? %>
  <%= link_to 'Edit', edit_zadatak_path(@zadatak) %> |
<% end %>
<%= link_to 'Back', zadataks_path %>

<%= link_to "Comments (#{@zadatak.comments.count})", comments_path(@zadatak), id: "s-h-comments", class: "btn btn-info", remote: true%>

<div class="row" id="comments">
  <div class="col-md-12">
    <% if @zadatak.comments.any? %>
      <ol class="comments">
        <% if logged_in? %>
          <%= render 'comments/comment_form' %>
        <% end %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>
</div>